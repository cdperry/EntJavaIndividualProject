<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.cdperry.brewday.entity.ComponentGrainEntity" table="COMPONENT_GRAIN" schema="BREWDAY">
        <id name="compGrainId" column="comp_grain_id" type="int">
            <generator class="native"/>
        </id>
        <property name="name" column="name" type="string"/>
        <property name="originId" column="origin_id" type="int"/>
        <property name="supplierId" column="supplier_id" type="int"/>
        <property name="grainTypeId" column="grain_type_id" type="int"/>
        <property name="color" column="color" type="big_decimal"/>
        <property name="potential" column="potential" type="big_decimal"/>
        <property name="notes" column="notes" type="string"/>
        <property name="updateDate" column="update_date" type="date"/>
        <property name="createDate" column="create_date" type="date"/>
    </class>
</hibernate-mapping>