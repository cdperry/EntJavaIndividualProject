<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.cdperry.brewday.persistence.UserEntity" table="USER" schema="BREWDAY">
        <composite-id mapped="true" class="com.cdperry.brewday.persistence.UserEntityPK">
            <key-property name="userId" column="user_id"/>
            <key-property name="userName" column="user_name"/>
        </composite-id>
        <property name="userPass" column="user_pass"/>
    </class>
</hibernate-mapping>